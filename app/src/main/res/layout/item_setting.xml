<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/setting_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/setting_item_background"
        android:backgroundTint="#CC1D1D"
        tools:srcCompat="@drawable/ic_theme_palette"
        android:scaleType="centerCrop"
        android:padding="@dimen/margin_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/setting_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Look and Feel"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toEndOf="@id/setting_item_image"
        app:layout_constraintTop_toTopOf="@id/setting_item_image"
        android:layout_marginStart="@dimen/margin_medium"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/setting_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="change Look and Feel theme"
        android:textSize="@dimen/text_size_x_small"
        android:textStyle="bold"
        app:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toEndOf="@id/setting_item_image"
        app:layout_constraintBottom_toBottomOf="@id/setting_item_image"
        android:layout_marginStart="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/setting_item_title"
        />






</androidx.constraintlayout.widget.ConstraintLayout>